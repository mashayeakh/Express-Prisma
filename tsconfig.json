  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    // "skipLibCheck": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "resolveJsonModule": true
  },
  // "include": ["src", "generated"]
  "include": ["src/*/"],
  "exclude": ["node_modules", "dist", "generated/prisma"]}